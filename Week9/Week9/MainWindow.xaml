<Window x:Class="Week9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week9"
        mc:Ignorable="d"
        Title="Score Calculator" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="126*"/>
            <ColumnDefinition Width="391*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lbl_sCount" Content="Score Count:" HorizontalAlignment="Left" Margin="118,127,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="lbl_sTotal" Content="Score total:" HorizontalAlignment="Left" Margin="118,96,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="lbl_score" Content="Score:" HorizontalAlignment="Left" Margin="118,65,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Label x:Name="lbl_average" Content="Average:" HorizontalAlignment="Left" Margin="118,158,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txt_score" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="98,68,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_sTotal" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="98,96,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_sCount" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="98,127,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120" FontFamily="Segoe UI Emoji" />
        <TextBox x:Name="txt_average" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="98,162,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_add" Content="Add" Grid.Column="1" HorizontalAlignment="Left" Margin="291,53,0,0" VerticalAlignment="Top" Width="75" IsDefault="True" Click="btn_add_Click" />
        <Button x:Name="btn_clear" Content="Clear Scores" Grid.Column="1" HorizontalAlignment="Left" Margin="10,261,0,0" VerticalAlignment="Top" Width="75" Click="btn_clear_Click" />
        <Button x:Name="btn_exit" Content="Exit" Grid.Column="1" HorizontalAlignment="Left" Margin="193,261,0,0" VerticalAlignment="Top" Width="75" IsCancel="True" Click="btn_exit_Click"/>

    </Grid>
</Window>
